{
  "title": "SCCM Single Pane of Glass - Complete Infrastructure Overview",
  "description": "Comprehensive single dashboard view of all SCCM infrastructure components including Site Servers, SQL Servers, Management Points, Distribution Points, and SQL Reporting Services with system metrics, service health, and logging",
  "template_variables": [
    {
      "name": "host",
      "prefix": "host",
      "available_values": [],
      "default": "*"
    },
    {
      "name": "role",
      "prefix": "role",
      "available_values": [
        "sccm-site-server",
        "sccm-sql-server", 
        "sccm-sql-reporting-server",
        "sccm-management-point",
        "sccm-distribution-point"
      ],
      "default": "*"
    }
  ],
  "layout_type": "ordered",
