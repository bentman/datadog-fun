        "show_tick": false,
        "has_padding": true
      },
      "layout": {
        "x": 0,
        "y": 18,
        "width": 12,
        "height": 1
      }
    },
    {
      "id": 14,
      "definition": {
        "type": "event_stream",
        "query": "sources:sqlserver status:error $host",
        "event_size": "s",
        "title": "SQL Server Errors",
        "title_size": "16",
        "title_align": "left"
      },
      "layout": {
        "x": 0,
