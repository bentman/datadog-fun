        "title": "Error Events (24h)",
        "title_size": "16",
        "title_align": "left",
        "precision": 0,
        "text_align": "center",
        "custom_links": [],
        "conditional_formats": [
          {
            "comparator": ">",
            "value": 50,
            "palette": "red_on_white"
          },
          {
            "comparator": ">",
            "value": 10,
            "palette": "yellow_on_white"
          },
          {
            "comparator": "<=",
            "value": 10,
            "palette": "green_on_white"
          }
        ]
      },
      "layout": {
        "x": 6,
        "y": 28,
        "width": 3,
        "height": 2
