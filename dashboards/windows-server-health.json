        "title": "Network Received (Bytes)",
        "title_size": "16",
        "title_align": "left",
        "yaxis": {
          "scale": "linear",
          "include_zero": true
        },
        "show_legend": true,
        "legend_layout": "auto",
        "legend_columns": ["avg", "min", "max", "value"]
      },
      "layout": {
        "x": 6,
        "y": 6,
        "width": 6,
        "height": 3
      }
    },
    {
      "id": 5,
      "definition": {
        "type": "timeseries",
        "requests": [
          {
            "q": "avg:system.net.bytes_sent{$host} by {host}",
