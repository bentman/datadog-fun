    {
      "id": 13,
      "definition": {
        "title": "System Uptime (days)",
        "title_size": "16",
        "title_align": "left",
        "show_legend": true,
        "legend_layout": "horizontal",
        "legend_columns": ["avg", "min", "max", "value"],
        "type": "timeseries",
        "requests": [
          {
            "formulas": [{ "formula": "query1 / 86400" }],
            "queries": [
              {
                "data_source": "metrics",
                "name": "query1",
                "query": "avg:system.uptime{$host} by {host}"
              }
            ],
            "response_format": "timeseries",
            "style": {
              "palette": "dog_classic",
              "order_by": "values",
              "line_type": "solid",
              "line_width": "normal"
            },
            "display_type": "line"
          }
        ]
      },
      "layout": { "x": 0, "y": 12, "width": 3, "height": 3 }
    },
