      "layout": {
        "x": 0,
        "y": 9,
        "width": 6,
        "height": 3
      }
    },
    {
      "id": 6,
      "definition": {
        "type": "timeseries",
        "requests": [
          {
            "q": "avg:ntp.offset{$host} by {host}",
            "display_type": "line",
            "style": {
              "palette": "warm",
              "line_type": "solid",
              "line_width": "normal"
            }
          }
        ],
        "title": "NTP Offset (ms)",
        "title_size": "16",
        "title_align": "left",
        "yaxis": {
          "scale": "linear"
        },
        "show_legend": true,
        "legend_layout": "auto",
        "legend_columns": ["avg", "min", "max", "value"]
      },
      "layout": {
        "x": 6,
        "y": 9,
        "width": 6,
        "height": 3
      }
    },
    {
      "id": 7,
      "definition": {
        "type": "query_table",
        "requests": [
          {
            "q": "avg:system.disk.free{$host} by {host,device}",
            "aggregator": "avg",
            "limit": 50,
            "order": "desc"
          }
        ],
        "title": "Free Disk Space by Host and Device (GB)",
        "title_size": "16",
        "title_align": "left",
        "has_search_bar": "auto"
      },
      "layout": {
        "x": 0,
        "y": 12,
        "width": 12,
        "height": 3
      }
    },
    {
      "id": 8,
      "definition": {
        "type": "note",
        "content": "## üìù Event Log Monitoring",
